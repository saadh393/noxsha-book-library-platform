MONGODB_URI=mongodb://127.0.0.1:27017
MONGODB_DB_NAME=noxsha

# Used to sign admin session tokens. Replace in production.
AUTH_SECRET=replace-with-strong-secret

# Base URL for the PHP storage microservice (no trailing slash).
STORAGE_SERVICE_URL=http://localhost:8000

# Exposed base URL for storage assets on the frontend.
NEXT_PUBLIC_STORAGE_BASE_URL=http://localhost:8000

# bKash sandbox configuration (replace with production values when deploying).
# Visit https://developer.bka.sh/ → Dashboard → Sandbox to obtain your own keys.
BKASH_BASE_URL=https://tokenized.sandbox.bka.sh
BKASH_CHECKOUT_VERSION=v1.2.0-beta
BKASH_APP_KEY=your-sandbox-app-key
BKASH_APP_SECRET=your-sandbox-app-secret
BKASH_USERNAME=sandbox-username
BKASH_PASSWORD=sandbox-password
BKASH_CALLBACK_URL=http://localhost:3000/api/payments/bkash/callback
NEXT_PUBLIC_SITE_URL=http://localhost:3000
